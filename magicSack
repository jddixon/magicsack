def main():
    """
    The command line looks like
        magicSack [-m MAGIC_DIR] SUBCMD otherArgs
    So at the top level we peek at sys.argv[1].  If it's '-m' or
    '--magicDir' we will collect it and its parameter here and
    process sys.argv[4:] as subArgs.  Otherwise we process sys.argv[2:]
    as subArgs in the subcommand.
    """

    args = sys.argv

    defaultDir = os.path.join(os.getenv('HOME'), '.magicsack')
    subCmdAt = 1
    if len(args) >= 4:
        if args[1] == '-m' or args[1] == '--magicDir':
            subCmdAt = 3

    # DEBUG
    print("SUB CMD AT %d" % subCmdAt)
    # END

    DESC = 'command-line interface to the Magic Sack'
    parser = ArgumentParser(description=DESC)
    parser.add_argument('-m', '--magicDir', default=defaultDir, type=str,
                        help='select folder/directory (default=%s)' % defaultDir)
    parser.add_argument('command',          # required
                        help='subCommand to be executed')
    args = parser.parse_args(sys.argv[1: subCmdAt + 1])

    args.appName = 'magicSack %s' % __version__
    args.defaultDir = defaultDir

    funcName = 'handle' + (args.command.capitalize())
    subArgs = sys.argv[subCmdAt + 1:]

    # DEBUG
    if funcName in globals():
        print("%s is present" % funcName)
    else:
        print("%s is NOT present" % funcName)
    print("subArgs:")
    for ndx, x in enumerate(subArgs):
        print("  %d %s" % (ndx, x))
    # END

    # fixups
    magicDir = args.magicDir
    args.rng = SystemRNG()

    # DEBUG
    print("magicDir: %s" % magicDir)
    # END

    if not magicDir or magicDir == '':
        print("magicDir must be specified")
        sys.exit(1)

    passPhrase = getpass.getpass('passphrase: ')
    if not passPhrase or passPhrase == '':
        print('you must supply a passphrase')
        sys.exit(1)
    args.passPhrase = passPhrase
    command = args.command
    if command == 'init':
        handleInit(args, subArgs, passPhrase)
    else:
        if not verifyPassPhrase(args, passPhrase):
            print('that was not the right passphrase!')
            sys.exit(1)
        globals()[funcName](args, subArgs)

if __name__ == '__main__':
    main()
